@model IEnumerable<PechShop.ViewModels.CustomerViewModel>

<h2>Покупатели</h2>

<table class="table cell-border hover" id="customers">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AdditionalInfo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalMoney)
        </th>
        <th>
            <a class="btn btn-block btn-success" align="center" asp-action="Create">Создать</a>

        </th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="word-wrap: break-word;max-width: 160px;">
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td style="word-wrap: break-word;max-width: 160px;">
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td style="word-wrap: break-word;max-width: 160px;">
                    @Html.DisplayFor(modelItem => item.AdditionalInfo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalMoney)
                </td>
                <td>
                    <div class="btn-group-vertical btn-block">
                        <a class="btn btn-default" asp-action="ShowOrders" asp-route-customerId="@item.Id">Заказы</a>
                        <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.Id">Редактировать</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Удалить</a>

                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script type="text/javascript" charset="utf8" src="~/lib/data-tables/datatables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#customers').DataTable({
                paging: false,
                searching: true,
                info: false,
                language: {
                    "search": "",
                    "zeroRecords": "Записи отсутствуют."
                }
            });
            $("input[type=search]").addClass("form-control");
        });
    </script>
}

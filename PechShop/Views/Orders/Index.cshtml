@model IEnumerable<PechShop.ViewModels.OrderViewModel>

<h2>Заказы</h2>

<table class="table cell-border hover" id="orders">
    <thead>
    <tr>
        <th>
            Товар
        </th>
        <th>
            Покупатель
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductsNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            <a class="btn btn-block btn-success" align="center" asp-action="Create">Создать</a>
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td style="word-wrap: break-word;max-width: 160px;">
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductsNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                <div class="btn-group-vertical btn-block">
                    <a class="btn  btn-info" asp-action="Edit" asp-route-id="@item.OrderId">Редактировать</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.OrderId">Удалить</a>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>

<style>
    .dataTables_wrapper .myfilter .dataTables_filter {
        float:left
    }
    .dataTables_wrapper .mylength .dataTables_length {
        float:right
    }
</style>
